extends ../layout

block content

    h1= title

    form(method="POST" action="")

        div.form-group
            label(for="name") Category:
            input#name.form-input(type="text" placeholder="Electronics, Outdoors etc." name="name" required=true value=(category===undefined ? "" : category.name))

        div.form-group
            label(for="description") Description:
            textarea#description.form-input(placeholder="This category is all you need when it comes to..." name="description" required=true rows=5 cols=50) #{category===undefined ? "" : category.description}

        button.btn(type="submit") Submit

    if errors
        ul
            for error in errors
                li!= error.msg

